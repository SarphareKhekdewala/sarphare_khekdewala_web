// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  nameMarathi String?
  category    String // "mud-crab" or "fish"
  description String
  price       Float
  unit        String // "kg", "piece"
  image       String
  stock       Int         @default(0)
  available   Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  OrderItem   OrderItem[]

  @@index([category])
  @@index([available])
}

model Customer {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  phone       String   @unique
  email       String?
  address     String
  area        String // "Mumbai", "Thane", "Navi Mumbai"
  pincode     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orders      Order[]
}

model Order {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber     String      @unique
  customer        Customer    @relation(fields: [customerId], references: [id])
  customerId      String      @db.ObjectId
  items           OrderItem[]
  totalAmount     Float
  deliveryCharge  Float       @default(0)
  finalAmount     Float
  status          String      @default("pending") // pending, confirmed, processing, out-for-delivery, delivered, cancelled
  paymentStatus   String      @default("pending") // pending, paid, failed
  paymentMethod   String? // razorpay, cod
  razorpayOrderId String?
  razorpayPaymentId String?
  deliveryDate    DateTime?
  deliverySlot    String? // morning, afternoon, evening
  notes           String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])
  productId String  @db.ObjectId
  quantity  Float
  price     Float
  total     Float
}

model DeliveryArea {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  area      String   @unique
  charge    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Settings {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  key               String   @unique
  value             String
  updatedAt         DateTime @updatedAt
}
